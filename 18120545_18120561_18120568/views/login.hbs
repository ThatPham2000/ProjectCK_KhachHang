<section id="form"><!--form-->
	<div class="container">
			
				<div class="login-form"><!--login form-->
			
					<h2>Login to your account</h2>
					<form method="POST" action="/buyer/login">
						{{#if message}}
                                <div
                                class="form-group form-control error"
                                style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29);margin: 50px"
                            >
                                {{message}}
                            </div>   
						{{/if}}

						<input name= "email" type="email" placeholder="Email Address" />
						<input name= "password"type="password" placeholder="Password" />
						
						<button type="submit" class="btn btn-default login-button">Login</button>
						<a href="/buyer/forgot">Forgot password?</a>
						<br>
						<div>
							<span>New to TechShop?</span>
							<a href="/buyer/signup">Sign up</a>
						</div>
					</form>
				</div><!--/login form-->
			
	</div>
</section><!--/form-->

